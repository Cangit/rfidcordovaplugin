private void showNFCStatus() {
  NfcAdapter nfcAdapter = NfcAdapter.getDefaultAdapter(cordova.getActivity().getApplicationContext());
  if (nfcAdapter == null) {
      Toast.makeText(cordova.getActivity().getApplicationContext(), "NFC NOT supported on this devices!", Toast.LENGTH_LONG).show();
  } else if(!nfcAdapter.isEnabled()) {
      Toast.makeText(cordova.getActivity().getApplicationContext(), "NFC NOT Enabled!", Toast.LENGTH_LONG).show();
  } else if(nfcAdapter.isEnabled()) {
      Toast.makeText(cordova.getActivity().getApplicationContext(), "Smashing success!", Toast.LENGTH_LONG).show();
  }
}

private void readRFID() {
  Intent intent = cordova.getActivity().getIntent();
  String action = intent.getAction();

  if (NfcAdapter.ACTION_TAG_DISCOVERED.equals(action)) {
    Toast.makeText(cordova.getActivity().getApplicationContext(), "ACTION_TAG_DISCOVERED", Toast.LENGTH_SHORT).show();

    Tag tag = intent.getParcelableExtra(NfcAdapter.EXTRA_TAG);
    if(tag == null) {
      Toast.makeText(cordova.getActivity().getApplicationContext(), "tag=null", Toast.LENGTH_SHORT).show();
    } else {
      String tagInfo = tag.toString() + "\n";

      tagInfo += "\nTag Id: \n";
      byte[] tagId = tag.getId();
      tagInfo += "length = " + tagId.length +"\n";
      for(int i=0; i<tagId.length; i++){
        tagInfo += Integer.toHexString(tagId[i] & 0xFF) + " ";
      }
      tagInfo += "\n";

      String[] techList = tag.getTechList();
      tagInfo += "\nTech List\n";
      tagInfo += "length = " + techList.length +"\n";
      for(int i=0; i<techList.length; i++){
        tagInfo += techList[i] + "\n ";
      }
      Toast.makeText(cordova.getActivity().getApplicationContext(), tagInfo, Toast.LENGTH_SHORT).show();
    }
  } else {
    Toast.makeText(cordova.getActivity().getApplicationContext(), "onResume() : " + action, Toast.LENGTH_SHORT).show();
  }
}
